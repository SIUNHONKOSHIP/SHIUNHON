<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
	<GridLayout
 		android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp" >

        <Button
            android:id="@+id/btn_statistic2_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_row="0"
            android:background="@drawable/wallet_list_back" />

        <TextView
            android:id="@+id/tv_statistic_title"
            android:layout_gravity="center"
            android:text="Statistic" />

	</GridLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<Spinner
		    android:id="@+id/spn_statistic2_typestatistic"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textColor="#33ccff"
		    android:textSize="18sp" />

		<GridLayout
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:layout_margin="5dp" >

		    <Button
		        android:id="@+id/btn_statistic2_previous"
		        android:layout_column="0"
		        android:layout_gravity="left"
		        android:layout_row="0"
		        android:text="&lt;" />

		    <TextView
		        android:id="@+id/tv_statistic2_date"
		        android:layout_column="0"
		        android:layout_gravity="center"
		        android:layout_row="0"
		        android:text="TextView" />

		    <Button
		        android:id="@+id/btn_statistic2_next"
		        android:layout_column="0"
		        android:layout_gravity="right"
		        android:layout_row="0"
		        android:text=">" />
		</GridLayout>

	</LinearLayout>
		
      	<TextView
			android:id="@+id/tv_statistic2_totalincome"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:text="Income: "
			android:textSize="18sp" />
	
		<TextView
		    android:id="@+id/tv_statistic2_totalexpenditure"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp"
		    android:text="Expenditure: "
		    android:textSize="18sp" />

		<Spinner
		    android:id="@+id/spn_statistic2_typechart"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:prompt="@drawable/home_bg_1" />

		<LinearLayout
		    android:id="@+id/layout_statistic2_chart"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
		</LinearLayout>

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="center"
		    android:text="NO DATA"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
