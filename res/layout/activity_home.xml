<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <!-- The main content view -->
    <RelativeLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <GridLayout
        android:id="@+id/header_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_bg_foot"
        android:columnCount="3"
        android:orientation="horizontal"
        android:useDefaultMargins="true" >

	        <Button
	            android:id="@+id/btn_menu"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left|center_vertical"
	            android:layout_marginLeft="10dp"
	            android:background="@drawable/home_foot_imgmenu"
	            android:minHeight="0dp"
	            android:minWidth="0dp" />
	
	        <Button
	            android:id="@+id/btn_logout"
	            android:layout_width="27dp"
	            android:layout_height="24dp"
	            android:layout_gravity="right|center_vertical"
	            android:layout_marginRight="5dp"
	            android:background="@drawable/home_foot_imglogout" />
	
	        <Space
	            android:layout_column="2"
	            android:layout_gravity="fill_vertical"
	            android:layout_row="1" />
	    </GridLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@+id/header_home"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/home_bg_wallet"
	            android:gravity="center"
	            android:orientation="vertical" >
	
	            <Button
	                android:id="@+id/btn_wallet"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="#171717"
	                android:paddingBottom="1dp"
	                android:paddingLeft="7dp"
	                android:paddingRight="7dp"
	                android:paddingTop="1dp"
	                android:text="WALLET"
	                android:textColor="#FFFFFF"
	                android:textSize="30sp" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/home_bg_income"
	            android:gravity="center"
	            android:orientation="vertical" >
	
	            <Button
	                android:id="@+id/btn_income"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:background="@drawable/btn_trans"
	                android:gravity="center_vertical|center_horizontal"
	                android:text="I N C O M E"
	                android:textColor="#FFFFFF"
	                android:textSize="30sp" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/home_bg_ex"
	            android:gravity="center"
	            android:orientation="vertical" >
	
	            <Button
	                android:id="@+id/btn_expenditure"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:background="@drawable/btn_trans"
	                android:text="E X P E N D I T U R E"
	                android:textColor="#252525"
	                android:textSize="30sp" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@drawable/home_bg_report"
	            android:gravity="center"
	            android:orientation="vertical" >
	
	            <Button
	                android:id="@+id/btn_statistic"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:background="@drawable/btn_trans"
	                android:text="REPORT"
	                android:textColor="#FFFFFF"
	                android:textSize="30sp" />
	        </LinearLayout>
	    </LinearLayout>
    </RelativeLayout>
 
    <!-- The navigation drawer -->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:layout_gravity="start">
 
        <!-- Profile Box -->
 
        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/drawer_bg"
            android:padding="8dp" >
 
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_info"
                android:layout_marginTop="15dp" />
 
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="vertical" >
 
                <TextView
                    android:id="@+id/lable_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
 
                <TextView
                    android:id="@+id/lable_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
 
        <!-- List of Actions (pages) -->
        <ListView
            android:id="@+id/navList"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileBox"
            android:choiceMode="singleChoice"
            android:background="#ffffffff" />
 
    </RelativeLayout>
 
</android.support.v4.widget.DrawerLayout>