<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.mililu.draftmp.HomeActivity" >

    <GridLayout
        android:id="@+id/header_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_bg_foot"
        android:columnCount="3"
        android:orientation="horizontal"
        android:useDefaultMargins="true" >

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_foot_imgmenu"
            android:minHeight="0dp"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/home_foot_imglogout" />

        <Space
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="1" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_home"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_bg_wallet"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#171717"
                android:paddingBottom="1dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="1dp"
                android:text="WALLET"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_bg_income"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_income"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_trans"
                android:gravity="center_vertical|center_horizontal"
                android:text="I N C O M E"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_bg_ex"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_expenditure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_trans"
                android:text="E X P E N D I T U R E"
                android:textColor="#252525"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_bg_report"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_statistic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_trans"
                android:text="REPORT"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>