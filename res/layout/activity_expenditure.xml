<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp" >

        <Button
            android:id="@+id/btn_expen_submit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_column="0"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:background="@drawable/income_check_1" />

        <TextView
            android:id="@+id/tv_expend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="Expenditure"
            android:textColor="#33ccff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_expen_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_column="0"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="10dp"
            android:layout_row="0"
            android:background="@drawable/wallet_list_back" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:columnCount="5" >

        <TextView
            android:id="@+id/tv_expen_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="0"
            android:text="So tien" />

        <Spinner
            android:id="@+id/spn_expen_danhmuc"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1" />

        <Button
            android:id="@+id/btn_expen_createcategory"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right|center_vertical"
            android:layout_row="1"
            android:text="Create" />

        <TextView
            android:id="@+id/tv_expen_category"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:text="Danh Muc" />

        <TextView
            android:id="@+id/tv_expen_walletname"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="3"
            android:text="Wallet" />

        <Spinner
            android:id="@+id/spn_expen_wallet"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_row="3" />

        <TextView
            android:id="@+id/tv_expen_notice"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="6"
            android:text="Ghi chu" />

        <EditText
            android:id="@+id/txt_expen_notice"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_row="6"
            android:ems="10" >
        </EditText>

        <TextView
            android:id="@+id/tv_expen_date"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="4"
            android:text="Date" />

        <TextView
            android:id="@+id/tv_expen_time"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="5"
            android:text="Time" />

        <EditText
            android:id="@+id/txt_expen_date"
            android:layout_width="175dp"
            android:layout_column="1"
            android:layout_gravity="left|fill"
            android:layout_row="4"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/txt_expen_time"
            android:layout_width="175dp"
            android:layout_column="1"
            android:layout_gravity="left|fill"
            android:layout_row="5"
            android:ems="10"
            android:inputType="time" />

        <Button
            android:id="@+id/btn_expen_date"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:text="Button" />

        <Button
            android:id="@+id/btn_expen_time"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="5"
            android:text="Button" />

        <EditText
            android:id="@+id/txt_expen_amount"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
            <requestFocus />

        </EditText>

        <Spinner
            android:id="@+id/spn_expen_danhmuccon"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="left|fill"
            android:layout_row="2" />

    </GridLayout>

</FrameLayout>
