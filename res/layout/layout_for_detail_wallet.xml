<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:useDefaultMargins="true"
    tools:context="com.looper.loop.PreferencesFragment" >
 
    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_layoutdetailwallet_name"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_layoutdetailwallet_notice"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:gravity="left|center_vertical"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_layoutdetailwallet_date"
        android:layout_column="1"
        android:layout_gravity="fill_vertical|center_horizontal"
        android:layout_row="0"
        android:gravity="center"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_layoutdetailwallet_money"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_row="1"
        android:gravity="right|center_vertical"
        android:text="5"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_layoutdetailwallet_setting"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_column="2"
        android:layout_gravity="center_vertical|end"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:text="Button" />
 
</GridLayout>
